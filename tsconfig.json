{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,        
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true                                

  },
  "include": ["src/**/**/*.ts", "src/**/**/*.json"],
  "exclude": ["node_modules"],
}